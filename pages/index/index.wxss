@import "../../public/star.wxss";

.header {
  width: 100%;
  padding: 10px 0;
  background-color: #090;
}

.header-search {
  width: 90%;
  height: 30px;
  margin: 0 auto;
  border-radius: 5px;
  background-color: #fff;
  font-size: 0;
}

.search-icon {
  display: inline-block;
  vertical-align: top;
  margin: 6px 5px 0 10px;
  font-size: 15px;
}

.search-text {
  display: inline-block;
  vertical-align: top;
  line-height: 30px;
  width: 90%;
  height: 30px;
  font-size: 12px;
}
.lately{
  margin-bottom: 40px;
}
.lately-header {
  width: 100%;
  height: 20px;
  border-left: 3px solid #090;
  margin: 10px 0;
}

.lately-left {
  width: 80%;
  float: left;
  font-size: 14px;
  font-weight: bold;
  padding-left: 10px;
}

.lately-right {
  float: right;
  font-size: 0;
  padding-right: 10px;
}

.more-text {
  display: inline-block;
  vertical-align: top;
  font-size: 14px;
  color: #090;
}

.more {
  display: inline-block;
  vertical-align: top;
  width: 20px;
  height: 20px;
}

.scroll {
  display: flex;
  white-space: nowrap;
}

.scroll-item {
  display: inline-block;
  margin-right: 10px;
}

.scroll-item:first-child {
  margin-left: 15px;
}

.scroll-box {
  display: flex;
  flex-direction: column;
}

.scroll-img {
  width: 100px;
  height: 140px;
}

.scroll-text {
  width: 100px;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 12px;
  font-weight: bold;
}
