.warning {
  text-align: center;
  font-size: 14px;
  color: #999;
}
.background{
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  opacity: 0.1;
  z-index: -1000;
}
.main{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 50rpx;
}
.mainimg{
  width: 100%;
  height: 800rpx;
}
.title{
  margin-top: 20rpx;
  font-size: 18px;
  color: #444
}
.subtitle{
  font-size: 12px;
  color: #888;
  margin-top: 20rpx;
  width: 80%;
}
.right{
  display: block;
  padding-right: 20rpx;
}
.summary{
  width: 100%;
  margin: 30rpx 0;
}
.label{
  display: block;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}
.text{
  text-indent: 40rpx;
  line-height: 50rpx;
  color: #666;
  font-size: 12px;
}